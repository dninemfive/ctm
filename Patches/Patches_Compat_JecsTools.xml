<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods><li>JecsTools</li></mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MeleeWeapon_D9EnergySword"]/description</xpath>
					<value>
						<description>An ancient design modernized to incorporate vanometric technology. In its inactive state, only the hilt remains for easy storage, but when activated it produces a blade of hardlight capable of cutting through the densest materials. Although somewhat hilt-heavy, the sword is exceptionally balanced.</description>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MeleeWeapon_D9EnergySword"]/graphicData/texPath</xpath>
					<value>
						<texPath>Things/Item/LightSword/LightSword_Hilt</texPath>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="MeleeWeapon_D9EnergySword"]</xpath>
					<value>
						<comps>
							<li Class="CompActivatableEffect.CompProperties_ActivatableEffect">
								<altitudeLayer>MoteOverhead</altitudeLayer>
								<ActivateLabel>Activate</ActivateLabel>
								<uiIconPathActivate>Things/Item/LightSword/LightSword_Gizmo_TurnOn</uiIconPathActivate>
								<DeactivateLabel>Deactivate</DeactivateLabel>
								<uiIconPathDeactivate>Things/Item/LightSword/LightSword_Gizmo_TurnOn</uiIconPathDeactivate>
								<gizmosOnEquip>true</gizmosOnEquip>
								<graphicData>
									<texPath>Things/Item/LightSword/LightSword_blade_alt</texPath>
									<graphicClass>Graphic_Single</graphicClass>
									<shaderType>CutoutComplex</shaderType>		
								</graphicData>
							</li>
						</comps>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>