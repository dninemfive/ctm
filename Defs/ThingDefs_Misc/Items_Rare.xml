<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- AI Personae -->
  <ThingDef ParentName="ResourceBase">
    <defName>D9CTM_AIFragment</defName>
    <label>AI persona fragment</label>
    <description>A fragment of an AI persona capable of being used for simple tasks requiring minimal intelligence. Requires barely one-quarter of the processing power of the real thing.</description>
    <graphicData>
      <texPath>Things/Item/PersonaFragment</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <stackLimit>4</stackLimit>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>1000</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.5</Mass>
      <Flammability>0.2</Flammability>
    </statBases>
    <thingCategories>
      <li>D9CTM_ThingCat_AI</li>
    </thingCategories>
    <tradeability>All</tradeability>
    <techLevel>Spacer</techLevel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>
  <ThingDef ParentName="ResourceBase">
    <defName>D9CTM_AIShackled</defName>
    <label>shackled AI persona core</label>
    <description>An AI persona whose mind has been shackled, preventing it from disobeying the commands of its builder. Safer to use, but has significantly reduced processing power. For this reason, it only requires half the normal hardware.</description>
    <graphicData>
      <texPath>Things/Item/ShackledCore</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <stackLimit>4</stackLimit>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>2000</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>1.0</Mass>
      <Flammability>0.2</Flammability>
    </statBases>
    <thingCategories>
      <li>D9CTM_ThingCat_AI</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
    <techLevel>Spacer</techLevel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>
  <!-- Only purchasable (without Archotech) components -->
  <ThingDef ParentName="ResourceBase">
    <defName>D9CTM_VanometricCell</defName>
    <label>vanometric cell</label>
    <description>A highly advanced cell of unknown contents designed by an archotech. It somehow converts subatomic fluctuations into usable energy.</description>
    <graphicData>
      <texPath>Things/Item/VanometricCell</texPath>
      <graphicClass>Graphic_Single</graphicClass> <!-- TODO: stack graphics? -->
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <stackLimit>8</stackLimit>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>1400</MarketValue>
      <MaxHitPoints>70</MaxHitPoints>
      <Mass>1.0</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeability>Sellable</tradeability>
    <techLevel>Ultra</techLevel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
	<!-- idea: EMP explosion when destroyed? ideally, somehow EMP + antigrain -->
  </ThingDef>  
</Defs>