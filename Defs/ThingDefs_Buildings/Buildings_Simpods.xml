<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase" Name="SimpodBase" Abstract="True">
    <thingClass>D9CTM.Building_Pod</thingClass>
    <graphicData>
      <texPath>Things/Building/Ship/ShipCryptosleepCasket</texPath> <!-- TODO: make custom texture -->
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,2)</drawSize>
      <shadowData>
        <volume>(0.83, 0.3, 1.7)</volume>
      </shadowData>
    </graphicData>
    <researchPrerequisites><li>D9Simpods</li></researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <WorkToBuild>6000</WorkToBuild>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0</Flammability>
	  <JoyGainFactor>1.5</JoyGainFactor>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(1,2)</size>
    <designationCategory>Joy</designationCategory>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(1,0,0)</interactionCellOffset>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>400</basePowerConsumption>
      </li>	  
    </comps>
    <!--defaultPlacingRot>South</defaultPlacingRot-->
    <building>
      <isPlayerEjectable>true</isPlayerEjectable>
	  <joyKind>Gaming_Dexterity</joyKind>
    </building>
    <costList>
		<Steel>120</Steel>
		<AIPersonaFragment>1</AIPersonaFragment>
		<ComponentIndustrial>3</ComponentIndustrial>
		<ComponentSpacer>3</ComponentSpacer>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>
  <!-- Dexterity simpods -->
  <ThingDef ParentName="SimpodBase">
	<defName>D9SimpodCombat</defName>
    <label>combat simpod</label>
    <description>A virtual-reality pod capable of generating extremely convincing simulations.\n\nThis one simulates combat, training the user in both shooting and melee.</description>
	<comps>
		<li Class="D9CTM.CompProperties_Simpod">
			<SkillsToTrain>
				<li>Shooting</li>
				<li>Melee</li>
			</SkillsToTrain>
			<XpPerTick>0.12</XpPerTick>
		</li>
	</comps>
  </ThingDef>
  <ThingDef ParentName="SimpodBase">
	<defName>D9SimpodFarming</defName>
    <label>farming simpod</label>
    <description>A virtual-reality pod capable of generating extremely convincing simulations.\n\nThis one simulates farming, teaching the user how to handle both plants and animals.</description>
	<comps>
		<li Class="D9CTM.CompProperties_Simpod">
			<SkillsToTrain>
				<li>Plants</li>
				<li>Animals</li>
			</SkillsToTrain>
			<XpPerTick>0.11</XpPerTick>
		</li>
	</comps>
  </ThingDef>
  <!-- Cerebral simpods -->
  <ThingDef ParentName="SimpodBase">
	<defName>D9SimpodEngineering</defName>
    <label>engineering simpod</label>
    <description>A virtual-reality pod capable of generating extremely convincing simulations.\n\nThis one teaches engineering, training the user in construction, crafting, and mining.</description>
	<building>
      <joyKind>Gaming_Cerebral</joyKind>
    </building>
	<comps>
		<li Class="D9CTM.CompProperties_Simpod">
			<SkillsToTrain>
				<li>Construction</li>
				<li>Mining</li>
				<li>Crafting</li>
			</SkillsToTrain>
			<XpPerTick>0.09</XpPerTick>
		</li>
	</comps>
  </ThingDef>  
  <ThingDef ParentName="SimpodBase">
	<defName>D9SimpodCooking</defName>
    <label>cooking simpod</label>
    <description>A virtual-reality pod capable of generating extremely convincing simulations.\n\nThis one simulates cooking, training the user to make all kinds of meals.</description>
	<building>
      <joyKind>Gaming_Cerebral</joyKind>
    </building>
	<comps>
		<li Class="D9CTM.CompProperties_Simpod">
			<SkillsToTrain>
				<li>Cooking</li>
			</SkillsToTrain>
			<XpPerTick>0.1</XpPerTick>
		</li>
	</comps>
  </ThingDef>
  <ThingDef ParentName="SimpodBase">
	<defName>D9SimpodMedical</defName>
    <label>medical simpod</label>
    <description>A virtual-reality pod capable of generating extremely convincing simulations.\n\nThis one is for teaching doctors, training the user's medical knowledge.</description>
	<building>
      <joyKind>Gaming_Cerebral</joyKind>
    </building>
	<comps>
		<li Class="D9CTM.CompProperties_Simpod">
			<SkillsToTrain>
			  <li>Medicine</li>
			</SkillsToTrain>
			<XpPerTick>0.1</XpPerTick>
		</li>
	</comps>
  </ThingDef>
  <!-- universal simpod -->
  <ThingDef ParentName="SimpodBase">
	<defName>D9SimpodUniversal</defName>
    <label>universal simpod</label>
    <description>A highly advanced virtual-reality pod capable of generating incredibly convincing simulations.\n\nThis one uses a neural interface to directly interact with the user's consciousness, allowing unlimited simulation possibilities.</description>
	<building>
      <joyKind>Gaming_Cerebral</joyKind>
    </building>
	<comps Inherit="False">
		<li Class="CompProperties_Power">
			<compClass>CompPowerTrader</compClass>
			<shortCircuitInRain>true</shortCircuitInRain>
			<basePowerConsumption>800</basePowerConsumption>
        </li>	  
		<li Class="D9CTM.CompProperties_Simpod">
			<SkillsToTrain>
			  <li>Shooting</li>
			  <li>Melee</li>
			  <li>Construction</li>
			  <li>Mining</li>
			  <li>Cooking</li>
			  <li>Plants</li>
			  <li>Animals</li>
			  <li>Crafting</li>
			  <li>Artistic</li>
			  <li>Social</li>
			  <li>Intellectual</li>
			  <li>Medicine</li>
			</SkillsToTrain>
			<XpPerTick>0.1</XpPerTick>
			<SatisfiesOutdoors>true</SatisfiesOutdoors>
		</li>
	</comps>
  </ThingDef>
</Defs>