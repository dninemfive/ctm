<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Silver Vanoreactor -->
  <ThingDef ParentName="BuildingBase">
    <defName>D9InfiniteSilverreactor</defName>
    <label>silver vanoreactor</label>
    <description>Passively generates silver atoms from vanometric fluctuations. The reaction path requires additional external power and a significant amount of existing silver as a catalyst.</description>
    <graphicData>
      <texPath>Things/Building/SilverVanoreactor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <!--shadowData>
        <volume>(1.8, 1.0, 0.2)</volume>
        <offset>(0.0, 0.0, -0.4)</offset>
      </shadowData-->
    </graphicData>
    <thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
	<designationCategory>Production</designationCategory>
	<researchPrerequisites><li>D9Vanoreactor</li></researchPrerequisites>
    <costList>
      <Plasteel>200</Plasteel>
      <ComponentSpacer>6</ComponentSpacer>
	  <D9VanometricCell>4</D9VanometricCell>
	  <Silver>1000</Silver>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>500</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Spawner">
        <requiresPower>true</requiresPower>
        <thingToSpawn>Silver</thingToSpawn>
        <spawnCount>15</spawnCount>
        <spawnIntervalRange><min>15000</min><max>15000</max></spawnIntervalRange>
        <writeTimeLeftToSpawn>true</writeTimeLeftToSpawn>
        <showMessageIfOwned>false</showMessageIfOwned>
      </li>
      <!--li Class="CompProperties_Explosive">
        <explosiveRadius>8</explosiveRadius>
        <explosiveDamageType>Flame</explosiveDamageType>
      </li-->
    </comps>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MarketValue>2000</MarketValue>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>-10</Beauty>
      <Mass>10</Mass>
      <WorkToBuild>8000</WorkToBuild>
    </statBases>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    <tickerType>Normal</tickerType>
    <size>(1, 1)</size>
    <fillPercent>1.0</fillPercent>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <passability>Impassable</passability>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <tradeability>Sellable</tradeability>
	<constructionSkillPrerequisite>14</constructionSkillPrerequisite>
  </ThingDef>
  <!-- Plasteel Vanoreactor -->
  <ThingDef ParentName="BuildingBase">
    <defName>PlasteelVanoreactor</defName>
    <label>plasteel vanoreactor</label>
    <description>Slowly converts loaded steel into plasteel by an unknown mechanism related to vanometric fluctuations.</description>
    <graphicData>
      <texPath>Things/Building/PlasteelVanoreactor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3, 3)</drawSize>
      <shadowData>
        <volume>(1.8, 1.0, 0.2)</volume>
        <offset>(0.0, 0.0, -0.4)</offset>
      </shadowData>
    </graphicData>
    <thingCategories>
      <li>BuildingsSpecial</li>
    </thingCategories>
	<designationCategory>Production</designationCategory>
	<researchPrerequisites><li>D9VanoreactorPlasteel</li></researchPrerequisites>
    <costList>
      <Plasteel>200</Plasteel>
      <ComponentSpacer>8</ComponentSpacer>
	  <D9VanometricCell>4</D9VanometricCell>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>300</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Spawner">
		<compClass>D9CTM.CompFueledSpawner</compClass>
        <requiresPower>true</requiresPower>
        <thingToSpawn>Plasteel</thingToSpawn>
        <spawnCount>10</spawnCount>
        <spawnIntervalRange><min>1000</min><max>1000</max></spawnIntervalRange> <!-- actually 60k, only 1k for testing -->
        <writeTimeLeftToSpawn>true</writeTimeLeftToSpawn>
        <showMessageIfOwned>false</showMessageIfOwned>
      </li>
	  <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>20.0</fuelConsumptionRate>
        <fuelCapacity>80.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </fuelFilter>
		<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>6</explosiveRadius>
        <explosiveDamageType>BombSuper</explosiveDamageType>
      </li>
    </comps>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MarketValue>1250</MarketValue>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>-10</Beauty>
      <Mass>40</Mass>
      <WorkToBuild>8000</WorkToBuild>
    </statBases>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
    <tickerType>Normal</tickerType>
    <size>(2, 2)</size>
    <fillPercent>1.0</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <passability>Impassable</passability>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <tradeability>Sellable</tradeability>
  </ThingDef>
</Defs>