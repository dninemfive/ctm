  <!-- nanite assistant -->
  <ThingDef ParentName="BuildingBase">
    <defName>D9CTMToolCabinet</defName>
    <label>nanite crafting assistant</label>
    <description>An advanced cabinet allowing fabrication of arbitrary tools and parts, greatly speeding up work speed. One workbench can make use of at most two crafting assistants.</description>
    <graphicData>
      <texPath>Things/Building/NaniteAsst/NaniteAsst</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,1)</drawSize>
      <!--color>(96,114,95)</color-->
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.35</staticSunShadowHeight>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <pathCost>60</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>1800</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Plasteel>160</Plasteel>
	  <ComponentSpacer>2</ComponentSpacer>
	  <Steel>200</Steel>
    </costList>
    <researchPrerequisites>
      <li>D9CraftingAsst</li>
    </researchPrerequisites>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Facility">
		<compClass>D9CTM.CompFacilityRequireFuel</compClass>
        <statOffsets>
          <WorkTableWorkSpeedFactor>0.25</WorkTableWorkSpeedFactor>
        </statOffsets>
        <maxSimultaneous>2</maxSimultaneous>
      </li>
	  <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>90.0</fuelConsumptionRate> <!-- a full fueling lasts five days -->
        <fuelCapacity>450.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>D9Nanomaterial</li>
          </thingDefs>
        </fuelFilter>
		<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
    </comps>
	<placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
	</placeWorkers>
  </ThingDef>
