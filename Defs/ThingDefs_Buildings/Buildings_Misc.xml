<Defs>
  <!-- Research Assistant -->
  <ThingDef ParentName="BuildingBase">
    <defName>D9ResearchAssistant</defName>
    <label>AI research assistant</label>
    <description>A peripheral for the research bench allowing it to use the expertise and additional processing power of an AI core to research hyperadvanced techs.</description>
    <graphicData>
      <texPath>Things/Building/ResearchAssistant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.46875</drawSize>
    </graphicData>
    <uiIconScale>0.85</uiIconScale>
    <researchPrerequisites><li>D9AIResearch</li></researchPrerequisites>
    <size>(2,2)</size>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <canOverlapZones>false</canOverlapZones>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>225</MaxHitPoints>
      <WorkToBuild>14000</WorkToBuild>
      <Mass>140</Mass>
      <Flammability>0.8</Flammability>
    </statBases>
    <costList>
      <ShackledAIPersona>1</ShackledAIPersona>
      <Plasteel>100</Plasteel>
      <ComponentSpacer>4</ComponentSpacer>
      <Gold>20</Gold>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>350</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.4</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
    <constructionSkillPrerequisite>12</constructionSkillPrerequisite>
  </ThingDef>
  <!-- Regeneration Pod -->
  <ThingDef ParentName="BuildingBase">    
	<defName>D9Healpod</defName>
    <label>regeneration pod</label>
    <description>A pod which utilizes healing mechanites to quickly heal wounds, as well as more slowly repairing permanent damage.</description>
	<thingClass>D9CTM.Building_Pod</thingClass>
    <graphicData>
      <texPath>Things/Building/RegenPod/RegenPod</texPath> 
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1,2)</drawSize>
      <shadowData>
        <volume>(0.83, 0.3, 1.7)</volume>
      </shadowData>
    </graphicData>
    <researchPrerequisites><li>D9HealpodRes</li></researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>70</pathCost>
    <blockWind>true</blockWind>
    <fillPercent>0.5</fillPercent>
	<defaultPlacingRot>South</defaultPlacingRot>
    <canOverlapZones>false</canOverlapZones>
    <statBases>
      <WorkToBuild>8000</WorkToBuild>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <size>(1,2)</size>
    <designationCategory>Misc</designationCategory>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(1,0,0)</interactionCellOffset>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>800</basePowerConsumption>
      </li>
	  <li Class="CompProperties_Flickable" />
	  <li Class="D9CTM.CompProperties_PodSettings"/>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>80.0</fuelConsumptionRate>
        <fuelCapacity>800.0</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>D9Nanomaterial</li>
          </thingDefs>
        </fuelFilter>
		<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
      </li>
	  <li Class="D9CTM.CompProperties_Healpod">
		<baseRareTicksPerMajorHeal>60</baseRareTicksPerMajorHeal> <!-- 6 hours per heal, scaling inversely with number of negative hediffs -->
		<minorFuelUsagePercent>0.02</minorFuelUsagePercent> <!-- percent of fuelConsumptionRate used when healing minor wounds -->
		<woundSealFuelUsagePercent>0.02</woundSealFuelUsagePercent> <!-- "" tending wounds -->
		<tendQuality>1.8</tendQuality> <!-- quality of tends. 1.0 is industrial, 1.6 is glitterworld -->
		<hp>0.05</hp> <!-- amount of HP to heal each injury per rare tick. Min 0, max 1 (would remove immediately) -->
	  </li>
    </comps>
    <building>
      <isPlayerEjectable>true</isPlayerEjectable>
    </building>
    <costList>
		<Steel>120</Steel>
		<Plasteel>80</Plasteel>
		<AIPersonaFragment>1</AIPersonaFragment>
		<ComponentSpacer>6</ComponentSpacer>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <constructionSkillPrerequisite>14</constructionSkillPrerequisite>
  </ThingDef>
  <!-- nanite assistant -->
  <ThingDef ParentName="BuildingBase">
